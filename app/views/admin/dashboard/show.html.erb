
<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Products:</h5>
          <p class="card-text">
            There are <%= @product_count %> products in the database.
          </p>
          <%= link_to 'View Product List', admin_products_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Categories:</h5>
          <p class="card-text">
            There are <%= @category_count %> categories in the database.
          </p>
          <%= link_to 'View Category List', admin_products_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>
